<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <button><a href="/admin/add-product">add product</a></button>
                <div class="card">
                    <div class="card-body">
                        <h4
                            class="card-title  d-flex  justify-content-center  ">
                            product
                            list</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            product name
                                        </th>
                                        <th>
                                            category
                                        </th>
                                        <th>
                                            price
                                        </th>
                                        <th>
                                            image
                                        </th>
                                        <th>
                                            quantity
                                        </th>
                                        <th>
                                            size
                                        </th>
                                        <th>
                                            offer
                                        </th>
                                        <th>
                                            actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let counter= 1; %>
                                    <% productData.forEach( product => { %>
                                    <tr>
                                        <td class="py-1"> <%= counter %> </td>
                                        <td class="py-1"> <%= product.name %>
                                        </td>
                                        <td class="py-1"> 
                                            <% if (product.category) { %>
                                                <%= product.category.name %>
                                            <% } else { %>
                                                N/A
                                            <% } %>
                                        <td class="py-1"><i
                                                class="fa-solid fa-indian-rupee-sign"></i>
                                            $<%= product.price %> </td>
                                        <td class="py-1"><img
                                                src="../images/product/sized/<%= product.images.image1 %>"
                                                alt></td>
                                        <!-- <span class="py-1 "><%= product.name
                                            %></span> -->
                                        <td class="py-1"> <%= product.quantity
                                            %> </td>
                                        <td class="py-1"> <%= product.size %>
                                        </td>
                                        <% if(product.offer) { %>
                                        <td><%= product.offer %></td>
                                        <% } else { %>
                                        <td class="py-1 ">offer not found</td>
                                        <% } %>
                                        <td>
                                            <div class="btn-group dropdown">
                                                <a href="/admin/edit-product?_id=<%= product._id%>" class="btn btn-outline-warning edit-button">
                                                    Edit
                                                </a>
                                                <a href="/admin/block-product?_id=<%= product._id %>" class="btn btn-outline-danger block-button" data-initial-status="<%= product.Is_blocked %>">
                                                    <%= product.Is_blocked == true ? "Block" : "Unblock" %>
                                                </a>
                                                <a href="/admin/delete-product?_id=<%= product._id %>" data-category-id="<%= product._id %>" class="btn btn-outline-primary delete-button">
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                      
                                    </tr>
                                    <% counter++ %>
                                    <% }) %>
                                </tbody>
                            </thead>
                        </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>


