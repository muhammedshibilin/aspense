<script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const searchInput = document.getElementById('search-input');
                        const searchButton = document.getElementById('search-button');
                       
                        searchButton.addEventListener('click', function() {
                             const searchTerm = searchInput.value.trim();
                             const currentUrl = new URL(window.location.href);
                             currentUrl.searchParams.set('search', searchTerm);
                             window.location.href = currentUrl.toString();
                        });
                       
                        // Add event listeners to pagination buttons
                        document.querySelectorAll('.pagination_style button').forEach(button => {
                           button.addEventListener('click', function(event) {
                             event.preventDefault(); // Prevent the default link behavior
                             const pageNumber = event.target.textContent; // Assuming the button text is the page number
                             const currentUrl = new URL(window.location.href);
                             currentUrl.searchParams.set('page', pageNumber);
                             // Preserve the search query if it exists
                             if (currentUrl.searchParams.has('search')) {
                               currentUrl.searchParams.set('search', currentUrl.searchParams.get('search'));
                             }
                             window.location.href = currentUrl.toString();
                           });
                        });
                       });


                    </script>
                       

