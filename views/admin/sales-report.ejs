                      <button type="button" class="btn btn-primary <% if (i === page) { %>active<% } %>">
                        <a href="<%= `?page=${i}&limit=${limit}${date ? `&date=${date}` : ''}${duration ? `&sort=${duration}` : ''}` %>" style="color: inherit; text-decoration: none;">
                          <%= i %>
                        </a>
                      </button>
                    </li>
                  <% } %>
