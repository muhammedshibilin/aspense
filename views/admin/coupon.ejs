                <script>







    //---------------------------  delete coupon
    function deleteCoupon(couponId) {
    Swal.fire({
    title: 'Are you sure?',
    text: "You want to delete this!",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, delete it!'
 }).then((result) => {
    if (result.isConfirmed) {
      fetch('/admin/delete-coupon', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ couponId: couponId }),
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
            console.log('ew',data);
          Swal.fire({
            text: 'Coupon deleted successfully.',
            icon: 'success',
          }).then(()=> {
            location.reload()
          })
         
        } else {
          Swal.fire({
            text: 'Failed to delete coupon.',
            icon: 'error',
          });
        }
      })
      .catch((error) => {
        console.error('Error:', error);
        Swal.fire({
          text: 'There was an error deleting the coupon.',
          icon: 'error',
        });
      });
    }
 });
}


                        function changePage(pageNumber) {                        
                            const newUrl = `${window.location.origin}${window.location.pathname}?page=${pageNumber}`                    
                            window.location.href = newUrl;
                        }
                      
                      
                        document.addEventListener('DOMContentLoaded', function() {
                          const searchInput = document.getElementById('search-input');
                          const searchButton = document.getElementById('search-button');
                      
                          searchButton.addEventListener('click', function() {
                              const searchTerm = searchInput.value.trim();
                              const currentUrl = new URL(window.location.href);
                              currentUrl.searchParams.set('search', searchTerm);
                              window.location.href = currentUrl.toString();
                          });
                      });
                      </script>
