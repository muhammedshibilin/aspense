    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
      document.getElementById("edit-offer-btn").addEventListener('click', async (e) => {
     e.preventDefault();
     const offerName = document.getElementById("edit-offer-name").value;
     const offerId = document.getElementById("edit-offer-id").value
     const offerAmount = document.getElementById("edit-offer-amount").value;
     const offerStartDate = document.getElementById('edit-active-date').value;
     const offerExpireDate = document.getElementById('edit-expire-date').value;

     if(offerStartDate<new Date()){
  Swal.fire({
    icon:"warning",
    title:"invalid date",
    text:"you want to choose a valid date",
    timer:2000
  })
  return
 }

 if(offerStartDate>offerExpireDate){
  Swal.fire({
    icon:"warning",
    title:"invalid date",
    text:"you want to choose a valid date",
    timer:2000
  })
  return
 }
    
     Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to edit this offer?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Yes, save it!',
        cancelButtonText: 'No, cancel!',
     }).then(async (result) => {
        if (result.isConfirmed) {
          console.log('offerSta',offerStartDate,offerExpireDate);

          const editOfferData = {
            name: offerName,
            offerId:offerId,
            offerAmount: offerAmount,
            activeDate: offerStartDate,
            expireDate: offerExpireDate
          };
    
          try {
            // Send the data as JSON
            const response = await fetch('/admin/edit-offer', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(editOfferData)
            });
    
            if (!response.ok) {
              throw new Error(`HTTP error! status: ${response.status}`);
            }
    
            const data = await response.json(); 
    
            if (data.success) {
              Swal.fire(
                'Success!',
                'Offer edited successfully.',
                'success'
              ).then(() => {
                window.location.href = "/admin/offer";
              });
            } else {
              Swal.fire(
                'Error!',
                'Failed to add offer.',
                'error'
              );
            }
          } catch (error) {
            console.error('Fetch Error:', error);
            Swal.fire(
              'Error!',
              'Failed to add offer. Please try again later.',
              'error'
            );
          }
        }
     });
    });
    </script>
    
    
    
    




